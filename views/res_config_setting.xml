<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="res_config_settings_shopify_form" model="ir.ui.view">
            <field name="name">res.config.settings.form</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="100"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Shopify Config" string="Shopify Config">
                        <h2>Shopify Config</h2>
                        <div class="row o_settings_container mt16">
                            <div class="col-md-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="shopify_api_key" class="oe_inline o_form_label"/>
                                    <div class="text-muted">
                                        Shopify API Key
                                    </div>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="shopify_api_key"/>
                                </div>
                            </div>
                            <div class="col-md-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="shopify_secret_key" class="oe_inline o_form_label"/>
                                    <div class="text-muted">
                                        Shopify Secret Key
                                    </div>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="shopify_secret_key"/>
                                </div>
                            </div>

                            <div class="col-md-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="shopify_api_version" class="oe_inline o_form_label"/>
                                    <div class="text-muted">
                                        Shopify Api Version
                                    </div>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="shopify_api_version"/>
                                </div>
                            </div>
                            <div class="col-md-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="shopipy_ngrok_url" class="oe_inline o_form_label"/>
                                    <div class="text-muted">
                                        Link URL webhook
                                    </div>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="shopipy_ngrok_url"/>
                                </div>
                            </div>
                                  <div class="col-md-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="shopify_redirect_uri" class="oe_inline o_form_label"/>
                                    <div class="text-muted">
                                        Shopify redirect URI
                                    </div>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="shopify_redirect_uri"/>
                                </div>
                            </div>
                        </div>
                        <h2>Xero Config</h2>
                        <div class="row o_settings_container mt16">
                            <div class="col-md-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="xero_client_id" class="oe_inline o_form_label"/>
                                    <div class="text-muted">
                                        Xero Client ID
                                    </div>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="xero_client_id"/>
                                </div>
                            </div>
                            <div class="col-md-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="xero_client_secret" class="oe_inline o_form_label"/>
                                    <div class="text-muted">
                                        Xero Client Secret
                                    </div>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="xero_client_secret"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>